        "location": "[parameters('2nd WebApp Location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Web/sites/slots', variables('uniquewebappname2'), 'staging')]"
        ],
        "properties": {
            "allow": true
        }
    },

    {
        "type": "Microsoft.Web/sites/slots/hostNameBindings",
        "apiVersion": "2021-02-01",
        "name": "[concat(variables('uniquewebappname2'), '/staging/', variables('uniquewebappname2'), '-staging.azurewebsites.net')]",
        "location": "[parameters('2nd WebApp Location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Web/sites/slots', variables('uniquewebappname2'), 'staging')]"
        ],
        "properties": {
